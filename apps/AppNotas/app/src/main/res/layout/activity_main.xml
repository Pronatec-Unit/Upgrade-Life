<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a06235434.appnotas.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calcular"
        android:id="@+id/button"
        android:layout_marginTop="127dp"
        android:layout_below="@+id/formNota02"
        android:layout_alignParentEnd="true"
        android:layout_gravity="top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="digite a primeira nota"
        android:id="@+id/textView"
        android:textSize="20dp"
        android:layout_marginTop="32dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/button" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/formNota01"
        android:text="Nota1"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite a segunda nota"
        android:id="@+id/Appnota2"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/formNota01"
        android:layout_alignStart="@+id/formNota01" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/formNota02"
        android:text="@string/nota2"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/Appnota2"
        android:layout_alignStart="@+id/Appnota2" />

</RelativeLayout>
