<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:text="@string/meus_arquivos"
            android:id="@+id/txtarquiv"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="30sp"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:background="#007FFF" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton"
            android:layout_marginTop="35dp"
            android:src="@drawable/img1"
            android:layout_below="@+id/txtarquiv"
            android:layout_toStartOf="@+id/imageButton2" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton2"
            android:layout_alignTop="@+id/imageButton"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="42dp"
            android:src="@drawable/img2"/>

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton3"
            android:src="@drawable/img3"
            android:layout_below="@+id/imageButton"
            android:layout_alignStart="@+id/imageButton" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton4"
            android:src="@drawable/img4"
            android:layout_above="@+id/imageButton5"
            android:layout_alignStart="@+id/imageButton2" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton5"
            android:src="@drawable/img5"
            android:layout_below="@+id/imageButton3"
            android:layout_toStartOf="@+id/imageButton4" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Voltar"
            android:id="@+id/button2"
            android:layout_below="@+id/imageButton5"
            android:layout_alignStart="@+id/imageButton4"
            android:onClick="chamaTelaUsuario"/>

    </RelativeLayout>
</LinearLayout>